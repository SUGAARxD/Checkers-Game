<Window x:Class="CheckersGame.View.StatisticsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CheckersGame.View"
        xmlns:vm="clr-namespace:CheckersGame.ViewModel"
        mc:Ignorable="d"
        Title="StatisticsWindow" Height="300" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize">

    <Window.DataContext>
        <vm:StatisticsVM/>
    </Window.DataContext>
    
    <Grid>

        <StackPanel
            VerticalAlignment="Center"
            HorizontalAlignment="Center">

            <Label
                Content="{Binding WhiteWinsLabel}"
                Margin="0,0,0,10"
                FontSize="30"
                BorderBrush="Black"
                BorderThickness="0,0,0,1"
                />
            <Label
                Content="{Binding RedWinsLabel}"
                FontSize="30"
                BorderBrush="Black"
                BorderThickness="0,0,0,1"
                />

        </StackPanel>
        
    </Grid>
    
</Window>
